<?xml version="1.0" encoding="UTF-8"?>
<meta-runner name="Dependencies Status">
    <description>
        Depends on following TeamCity parameters:
        * RELEASE_MANAGEMENT_SERVICE_URL
        Dependencies Status
    </description>
    <settings>
        <parameters>
            <param name="BUILD_VERSION" value="" spec="text validationMode='not_empty'"/>
            <param name="COMPONENT_NAME" value="" spec="text validationMode='not_empty'"/>
            <param name="DEPENDENCIES_STATUS_FILE" value="" spec="text validationMode='not_empty'"/>
        </parameters>
        <build-runners>
            <runner name="dependencies status" type="OctopusReleaseManagementAutomation">
                <parameters>
                    <param name="ARGS"
                           value="--url=%RELEASE_MANAGEMENT_SERVICE_URL%  dependencies-status --component=%COMPONENT_NAME% --version=%BUILD_VERSION% --dependencies-status-file=%DEPENDENCIES_STATUS_FILE%"/>
                </parameters>
            </runner>
        </build-runners>
        <requirements/>
    </settings>
</meta-runner>